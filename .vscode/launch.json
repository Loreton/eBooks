    "configurations": [
        {
            "name": "search",
            "type": "python",
            "request": "launch",
            "stopOnEntry": true,
            "program": "${workspaceFolder}/__main__.py",
            "args": [
                "search",
                // "--field=content",
                "--words=corpotre",
                "--go",
            ],
            "cwd": "${workspaceRoot}",
        },

        {
            "name": "search_near",
            "type": "python",
            "request": "launch",
            "stopOnEntry": true,
            "program": "${workspaceFolder}/__main__.py",
            "args": [
                "search",
                "--field=content",
                "--words=miei  tacchi",
                "--near=0",
                "--go",
            ],
            "cwd": "${workspaceRoot}",
        },
        {
            "name": "change_id",
            "type": "python",
            "request": "launch",
            "stopOnEntry": true,
            "program": "${workspaceFolder}/__main__.py",
            "args": [
                "change_id",
            ],
            "cwd": "${workspaceRoot}",
        },

        {
            "name": "load",
            "type": "python",
            "request": "launch",
            "stopOnEntry": true,
            // "pythonPath": "/usr/bin/python3",
            // "pythonPath": "${config:python.pythonPath}",
            // "program": "/mnt/k/Filu/LnDisk/GIT-REPO/LnEbook/__main__.py",
            "program": "${workspaceFolder}/__main__.py",
            "args": [
                "load",
                // "--move",
                "--go",
                "--index",
                // "--log",
                "--max=1",
            ],
            "cwd": "${workspaceRoot}",
        },

        {
            "name": "build",
            "type": "python",
            "request": "launch",
            "stopOnEntry": true,
            // "pythonPath": "/usr/bin/python3",
            // "pythonPath": "${config:python.pythonPath}",
            // "program": "/mnt/k/Filu/LnDisk/GIT-REPO/LnEbook/__main__.py",
            "program": "${workspaceFolder}/__main__.py",
            "args": [
                "build",
                "--fields=content",
                "--db=Ln_eBooks_TEST",
                "--go",
            ],
            "cwd": "${workspaceRoot}",
        },

        {
            "name": "ebook_search",
            "type": "python",
            "request": "launch",
            "stopOnEntry": true,
            // "pythonPath": "/usr/bin/python3",
            // "pythonPath": "${config:python.pythonPath}",
            // "program": "/mnt/k/Filu/LnDisk/GIT-REPO/LnEbook/__main__.py",
            "program": "${workspaceFolder}/__main__.py",
            "args": [
                "book_search",
                "--id=Jess_L_Oltre_le_bugies",
                "--words=ciao",
            ],
            "cwd": "${workspaceRoot}",
        },


 
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
        },
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "enter-your-module-name-here",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": [
                "runserver",
                "--noreload",
                "--nothreading"
            ],
            "django": true
        },
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        },
        {
            "name": "Python: Current File (External Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal"
        }
    ]
}